<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DesignerMobile.Pages.KilometrosParaMetros"
             Title="Kilômetros para Metros">
    <StackLayout Padding="10">
        <Label FontSize="Large" />
        <Entry x:Name="entryKilometros" Placeholder="Insira o valor em Kilômetros" Keyboard="Numeric" />
        <Button Text="Converter" Clicked="OnConverterClicked"   BackgroundColor="Black"/>
        <Label x:Name="labelResultado" FontSize="Medium" />
    </StackLayout>
</ContentPage>