<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:DesignerMobile.Pages"
       x:Class="DesignerMobile.AppShell">

    <FlyoutItem Title="Home" Icon="icon_home.png">
        <ShellContent ContentTemplate="{DataTemplate local:HomePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Kilômetros para Metros" Icon="icon_km_to_m.png">
        <ShellContent ContentTemplate="{DataTemplate local:KilometrosParaMetros}" />
    </FlyoutItem>

    <FlyoutItem Title="Hectômetros para Metros" Icon="icon_hm_to_m.png">
        <ShellContent ContentTemplate="{DataTemplate local:HectometrosParaMetros}" />
    </FlyoutItem>

    <FlyoutItem Title="Metros para Centímetros" Icon="icon_m_to_cm.png">
        <ShellContent ContentTemplate="{DataTemplate local:MetrosParaCentimetros}" />
    </FlyoutItem>

    <FlyoutItem Title="Sobre" Icon="icon_about.png">
        <ShellContent ContentTemplate="{DataTemplate local:Sobre}" />
    </FlyoutItem>

</Shell>